extends ../layout.pug 
block content 
    h3=user.name 
    p=user.email

    if user.id == loggedInUser.id 
        form(method='post', action=`/users/${user.id}/edit/?_method=PUT`)
            label(for="email") Change email
            input(type="String", placeholder="email", name="email", value=user.email, required)
            input(type="submit", value="Upload")